<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.almana.calctrainer.CalcActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvZahl1"
        style="@style/bigText" />

    <TextView
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvZahl1"
        android:layout_marginStart="19dp"
        android:id="@+id/tvOperator"
        style="@style/bigText" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvOperator"
        android:layout_toEndOf="@+id/tvOperator"
        android:layout_marginStart="18dp"
        android:id="@+id/tvZahl2"
        style="@style/bigText"/>

    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelEquals"
        android:layout_alignBaseline="@+id/tvZahl2"
        android:layout_alignBottom="@+id/tvZahl2"
        android:layout_toEndOf="@+id/tvZahl2"
        android:layout_marginStart="11dp"
        style="@style/bigText" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buMinux"
        android:textSize="36sp"
        android:layout_alignBaseline="@+id/buPlus"
        android:layout_alignBottom="@+id/buPlus"
        android:layout_toEndOf="@+id/buPlus" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buPlus"
        android:textSize="36sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ivSmilie"
        android:layout_alignStart="@+id/ivSmilie" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/icon_wink"
        android:id="@+id/ivSmilie"
        android:scaleType="fitXY"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etResultat"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Rechne..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        style="@style/bigText"
        android:layout_above="@+id/buPlus"
        android:layout_toEndOf="@+id/ivSmilie"
        android:layout_marginBottom="81dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/etResultat"
        style="@style/bigText"
        android:textSize="24sp"
        android:layout_alignParentTop="false"
        android:layout_toEndOf="@+id/labelEquals"
        android:selectAllOnFocus="true" />

</RelativeLayout>
